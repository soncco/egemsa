$azul = #0065B0
$verde = #64AA28
$azulbg = #004BAF
$grey = #EDF2F6


@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap');
body
    font-family: 'Open Sans', sans-serif;
    font-weight: 300;
    color: #363233;
    letter-spacing: .8px;
    line-height: 1.6rem;

a
    color: #337ab7
#main
    a:link
        text-decoration: none

    a:hover
        text-decoration: underline

// Bootstrap
@media (min-width 576px)
    .modal-dialog
        max-width none

.modal-dialog
    width 98%
    height 92%
    padding 0

.modal-content,
.modal-body
    height 99%

h1
    color $azul

h2
    color $verde

.categoria
    background $grey
    padding 5px 10px
    height 80px
    text-align center
    margin-bottom 10px
    &:hover
        background #f1f1f1

    h4
        font-size 14px


.documento-lista
    border-bottom 1px solid $grey
    padding 4px 0

    .categoria-lista
    .fecha-lista
        font-size 12px
        color #888

        a
            color $verde

    .fecha-lista
        color #6d6d6d


.arbol
    h2
        font-size 20px
    h3
        font-size 17px
    h4
        font-size 14px

    h2, h3, h4
        margin-bottom 0
        color #3f945e

.sidebar
    h3
        color $azul
    ul
        li.comun-lista
            a
                background $grey
                display block
                padding 8px 10px
                border 1px solid transparent
                border-width 1px 0
                text-decoration none
                border-bottom-color #dceaf7
                &:hover
                    background #f1f1f1
                    border-color #cdcaca

            &.active
                padding 8px 10px
                font-weight bold


.documento-fecha
    color #6d6d6d
    font-size 12px


.agenda-lista
    border-bottom 1px solid $grey
    padding 4px 0

    .organiza
        font-size 12px
        color #888

    .fecha-lista
        color #6d6d6d

.evento-meta
    .fa
        width 20px
        color $verde

.breadcrumb
    padding: 8px 15px;
    margin-bottom: 20px;
    background-color: #f5f5f5;
    border-radius: 4px

.logo {
    text-align:center;
    margin:auto;
    margin-top:1rem;
    margin-bottom:1rem;
    width:100px;
    height:30px;
    background:url(https://www.egemsa.com.pe/themes/custom/egemsa/assets/logo-sprite.svg) no-repeat top left;
    background-position:0 0px;
    background-size:auto 60px;
    transition:all .5s

    span {
        display: block;
        text-indent: -9999px;
        overflow: hidden;
        white-space: nowrap;
        height: 100%;
    }
}